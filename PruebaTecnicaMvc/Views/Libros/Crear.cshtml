@model PruebaTecnicaMvc.Models.Libro

@{
    ViewData["Title"] = "Crear Libro";
}

<h1>Crear Libro</h1>

<h4>Libro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="FechaPublicacion" class="control-label"></label>
                <input asp-for="FechaPublicacion" class="form-control" type="date" />
                <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" id="btnCrear" class="btn btn-success" disabled />
                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            const $form = $('form');
            const $submitBtn = $('#btnCrear');
            const $inputs = $form.find('input:not([type="hidden"])');

            function checkForm() {
                let isValid = true;
                
                $inputs.each(function () {
                    // Verificamos si el campo está vacío o si tiene errores de validación de jQuery Validation
                    if (!$(this).val() || $(this).hasClass('input-validation-error')) {
                        isValid = false;
                        return false; // break loop
                    }
                });

                // También podemos apoyarnos en el validador de jQuery si está presente
                if ($form.valid && !$form.valid()) {
                    isValid = false;
                }

                $submitBtn.prop('disabled', !isValid);
            }

            // Lógica específica para el campo Precio
            $('#Precio').on('input', function () {
                // Eliminar caracteres no numéricos excepto el punto
                let value = $(this).val().replace(/[^\d]/g, '');
                
                // Si hay valor, formatear con separadores de miles
                if (value) {
                    value = parseInt(value, 10).toLocaleString('de-DE'); // 'de-DE' usa punto para miles
                }
                
                $(this).val(value);
            });

            function checkForm() {
                let isValid = true;
                
                $inputs.each(function () {
                    let val = $(this).val();
                    
                    if (this.id === 'Precio') {
                        // Limpiar puntos antes de evaluar el valor real
                        val = val.replace(/\./g, '');
                        if (!val || parseFloat(val) <= 0) {
                            isValid = false;
                            return false;
                        }
                    } else {
                        if (!val || $(this).hasClass('input-validation-error')) {
                            isValid = false;
                            return false;
                        }
                    }
                });

                if ($form.valid && !$form.valid()) {
                    isValid = false;
                }

                $submitBtn.prop('disabled', !isValid);
            }

            // Escuchar cambios en los inputs
            $inputs.on('keyup change blur', function () {
                setTimeout(checkForm, 100);
            });

            // Antes de enviar el formulario, debemos limpiar el campo Precio de puntos 
            // para que el modelo decimal de C# lo reciba correctamente como un número plano.
            $form.on('submit', function() {
                const $precio = $('#Precio');
                $precio.val($precio.val().replace(/\./g, ''));
            });

            checkForm();
        });
    </script>
}
