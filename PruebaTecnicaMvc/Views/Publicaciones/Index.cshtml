@model IEnumerable<PruebaTecnicaMvc.Models.Publicacion>

@{
    ViewData["Title"] = "Publicaciones";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Publicaciones</h1>
    <a asp-action="Crear" class="btn btn-primary">Nueva Publicaci√≥n</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@item.Titulo</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Por: @item.Usuario?.Nombre - @item.FechaPublicacion.ToShortDateString()</h6>
                    <p class="card-text">@item.Contenido</p>
                </div>
            </div>
        </div>
    }
</div>
